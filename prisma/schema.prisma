  device_type     String? // Type de terminal (bbpos_wisepad3, verifone_p400, etc.)
  serial_number   String?
  ip_address      String?

  // Multi-tenant
  entreprise   Entreprise @relation(fields: [entrepriseId], references: [id], onDelete: Cascade)
  entrepriseId String

